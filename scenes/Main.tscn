	robot.set_position(Vector2(x*50,y*50))
	if color == \"RED\":
		robot.robot_color = robot.COLOR.RED
		grid[y][x] += \"R\"
		Global.red_position = Vector2(x,y)
	elif color == \"BLUE\":
		robot.robot_color = robot.COLOR.BLUE
		grid[y][x] += \"B\"
